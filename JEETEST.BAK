void Questions()
{
	char user_ans[30];

	char str[80];

	int u=0,Ques=0,T_Ques=0;

	ifstream file;

	file.open("Jee_ques.txt",ios::in);

	int i=9;


	while(!file.eof())
	{
		textcolor(WHITE);

		file.getline(str,80);

		if(str[strlen(str)-1]=='#')
		{

			gotoxy(3,i);
			for(int j=0;j<strlen(str)-1;j++)
			{
				cprintf("%c",str[j]);
			}

			Ques++;
			T_Ques=Ques;
			blink_question(Ques);

			//getch();

			gotoxy(5,21);
			textcolor(YELLOW);
			cprintf("Enter Your Choice:");

			cin>>user_ans[u];
			u++;



			clrscr();
			test();
			i=9;
		}
		else
		{
			gotoxy(3,i);
			cprintf("%s",str);
			i++;
		}

	}
	getch();
}
